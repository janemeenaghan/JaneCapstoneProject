<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertForButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizForButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.80" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/createButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@id/guidelineVertForButton"
            app:layout_constraintTop_toBottomOf="@id/guidelineHorizForButton"
            android:contentDescription="createButton"
            android:visibility="visible" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|top" >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertForImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizForImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.04" />
        
        <TextView
            android:id="@+id/musicInformation"
            android:layout_width="237dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:text="TextView"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/musicIcon"
            app:layout_constraintStart_toEndOf="@+id/musicIcon"
            app:layout_constraintTop_toTopOf="@+id/musicIcon" />

        <ImageView
            android:id="@+id/musicIcon"
            android:layout_width="67dp"
            android:layout_height="76dp"
            app:layout_constraintLeft_toRightOf="@id/guidelineVertForImage"
            app:layout_constraintTop_toBottomOf="@id/guidelineHorizForImage"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>