<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/framelayout"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/createButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="600dp"
            android:layout_weight="0"
            android:clickable="true"
            android:contentDescription="createButton"
            android:src="@drawable/ic_baseline_add_24"
            android:visibility="visible"
            sothree:fabCustomSize="70dp"
            sothree:fabSize="auto" />
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:gravity="center" />
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|top">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizForImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.04" />
        <TextView
            android:id="@+id/musicInformation"
            android:layout_width="237dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:text="TextViewawiorhgioahgoirhdanoivneo9awfnrgoahwefldnksgaeefoidbsngearwofiagrenboiagwensoihagwneoiqntgw"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/musicIcon"
            app:layout_constraintStart_toEndOf="@+id/musicIcon"
            app:layout_constraintTop_toTopOf="@+id/musicIcon" />
        <ImageView
            android:id="@+id/musicIcon"
            android:layout_width="67dp"
            android:layout_height="76dp"
            sothree:srcCompat="@drawable/tempmusicicon"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp"
            tools:srcCompat="@tools:sample/avatars" />
        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/volumebar"
            android:max="100"
            android:paddingBottom="10dip"
            app:layout_constraintBottom_toBottomOf="@+id/musicInformation"
            app:layout_constraintStart_toEndOf="@+id/musicInformation"
            app:layout_constraintTop_toTopOf="@+id/musicInformation" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertForImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>