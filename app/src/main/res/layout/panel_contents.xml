<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center|top">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizForImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />
    <TextView
        android:id="@+id/musicInformation"
        android:layout_width="237dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/musicIcon"
        app:layout_constraintStart_toEndOf="@+id/musicIcon"
        app:layout_constraintTop_toTopOf="@+id/musicIcon" />
    <ImageView
        android:id="@+id/musicIcon"
        android:layout_width="67dp"
        android:layout_height="76dp"
        sothree:srcCompat="@drawable/tempmusicicon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp"
        tools:srcCompat="@tools:sample/avatars" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertForImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />
</androidx.constraintlayout.widget.ConstraintLayout>
